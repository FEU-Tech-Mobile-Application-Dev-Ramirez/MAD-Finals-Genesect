<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/page_view">

    <ImageView
        android:id="@+id/Menu"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_menu"
        app:tint="@android:color/white" />



    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="39dp"
        android:text="User"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="-71dp"
        android:layout_toStartOf="@id/tvUsername"
        android:src="@drawable/ic_profile"
        app:tint="@android:color/white" />

    <ImageView
        android:id="@+id/imgBanner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/tvUsername"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        android:background="@color/purple_700" />

    <!-- Tournaments and News Buttons -->
    <LinearLayout
        android:id="@+id/tabButtons"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/imgBanner"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnTournaments"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/button_corner"
            android:textStyle="bold"
            android:text="TOURNAMENTS"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnNews"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:background="@drawable/button_corner3"
            android:textStyle="bold"
            android:text="NEWS"
            android:textAllCaps="false" />

    </LinearLayout>

    <!-- Tournament List -->

    <LinearLayout
        android:id="@+id/T1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabButtons"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnJoin1"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:background="@drawable/button_cornerlg"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:text="Join"
          />



    <com.google.android.material.card.MaterialCardView
        android:layout_width="340dp"
        android:layout_height="150dp"
        app:cardCornerRadius="20dp"
       android:background="@drawable/tournament_corner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date: --/--/----"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="10dp"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/tvTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time: --:--"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="10dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tvLocation1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location: ----"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="10dp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgTournament1"
                android:layout_width="230dp"
                android:layout_height="150dp"
                android:layout_marginStart="23dp"
                android:background="@color/purple_700"/>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>






    </LinearLayout>

    <LinearLayout
        android:id="@+id/T2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/T1"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnJoin2"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:background="@drawable/button_cornerlg"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:text="Join"
            />



        <com.google.android.material.card.MaterialCardView
            android:layout_width="340dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            android:background="@drawable/tournament_corner">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: --/--/----"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="10dp"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/tvTime2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time: --:--"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="10dp"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/tvLocation2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: ----"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="10dp"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgTournament2"
                    android:layout_width="230dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="23dp"
                    android:background="@color/purple_700"/>


            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>






    </LinearLayout>

    <LinearLayout
        android:id="@+id/T3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/T2"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnJoin3"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:background="@drawable/button_cornerlg"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:text="Join"
            />



        <com.google.android.material.card.MaterialCardView
            android:layout_width="340dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            android:background="@drawable/tournament_corner">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDate3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: --/--/----"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="10sp"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/tvTime3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time: --:--"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="10sp"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/tvLocation3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: ----"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgTournament3"
                    android:layout_width="230dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="23dp"
                    android:background="@color/purple_700"/>


            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>






    </LinearLayout>


</RelativeLayout>
